{
	"plugins": [
		"@trivago/prettier-plugin-sort-imports",
		"prettier-plugin-tailwindcss"
	],
	"printWidth": 80,
	"tabWidth": 2,
	"useTabs": true,
	"trailingComma": "all",
	"singleQuote": true,
	"semi": true,
	"endOfLine": "auto",
	"arrowParens": "avoid",
	"bracketSpacing": true,
	"jsxBracketSameLine": true,

	"importOrder": ["^@/(.*)$", "^[./]"],
	"importOrderSeparation": true
}
